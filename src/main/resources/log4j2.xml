<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="LOGGER" packages="">
    <Appenders>
        <File name="patchManager"
              fileName="logs/patchManager-${date:yyyy-MM-ddHHmmssSSS}.log">
            <PatternLayout>
                <Pattern>%d [%t] %-5level %logger{1} - %msg%n
                </Pattern>
            </PatternLayout>
        </File>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%highlight{%d [%t] %-5level: %msg%n%throwable}" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="patchManager"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>